extends ../layout

block styles
  link(rel='stylesheet', media='screen'
    href='//www.authy.com/form.authy.min.css')
  link(rel='stylesheet', type='text/css', href='https://cdnjs.cloudflare.com/ajax/libs/chosen/1.4.2/chosen.min.css')
  link(rel='stylesheet', href='/css/bootstrap.css')
  link(rel='stylesheet', href='/css/bootstrap-theme.min.css')
  link(rel='stylesheet', type='text/css', href='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.14.30/css/bootstrap-datetimepicker.min.css')

block content
  .santa-form.o-container.o-container--medium
    .hero
      p.intro.first-highlight
          b S 
          |ignup to have Santa call you.

    form(action='/users', method='POST')
      .o-grid
        .o-form-element.o-grid__cell.o-grid__cell--width-50
          label.c-label(for='fullName') Your Full Name:
          input.c-field(type='text', name='fullName', 
            placeholder='Susan Walker')

        .o-form-element.o-grid__cell.o-grid__cell--width-50
          label.c-label(for='email') Your E-Mail Address:
          input.c-field(type='email', name='email', 
            placeholder='swalker@macys.com')

      .o-grid
        .o-form-element.o-grid__cell.o-grid__cell--width-50
          label.c-label(for='countryCode') Country Code:
          select(id='authy-countries', name='countryCode')

        .o-form-element.o-grid__cell.o-grid__cell--width-50
          label.c-label(for='phone') Mobile Phone:
          input.c-field.phone(type='text', name='phone', placeholder='555-MIR-ACLE')

      .o-grid
        .o-grid__cell.o-grid__cell--width-50
          label.c-label(for='time') Have Santa Call At:
          .o-field.o-field--icon-left
            i.fa.fa-fw.fa-calendar.c-icon
            input#inputDate.c-field(type='text', name='time', placeholder='Pick a Date', required='')

        .o-form-element.o-grid__cell.o-grid__cell--width-50
          label.c-label(for='selectTimeZone') Time Zone
          select#selectTimeZone.c-field(name='timeZone', required='')
            each zone in timeZones
              option()
              option(value="#{zone}") !{zone}

      .u-center-block
        button.c-button.c-button--rounded.c-button--error.u-center-block__content(type='submit') Create Account

block scripts
  // Include Authy form helpers and additional helper script
  script(src='//www.authy.com/form.authy.min.js')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/chosen/1.4.2/chosen.jquery.min.js')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.17.1/moment.min.js')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/moment-timezone/0.5.10/moment-timezone-with-data.min.js')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.14.30/js/bootstrap-datetimepicker.min.js')
  script(src='/js/jquery.maskedinput.js')
  script(src='/js/create_form.js')