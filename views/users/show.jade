extends ../layout

block content
  .santa-form.o-container.o-container--medium
    p.intro Congrats! Santa will be calling you soon!
  h1= user.fullName
  p= 'Account Status: ' + (user.verified ? 'Verified' : 'Not Verified')

  if !user.verified
    p
      a(href='/users/'+user._id+'/verify') Verify your account now.